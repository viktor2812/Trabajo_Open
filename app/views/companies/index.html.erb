<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Cliente</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar por...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">
            <h2>Listar</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <table id="datatable-buttons" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Nombre</th>
        <th>RFC</th>
        <th>Direccion</th>
        <th># Exterior</th>
        <th># Interior </th>
        <th>Colonia </th>
        <th>Ciudad</th>
        <th>CP</th>
        <th>Telefono</th>
        <th>Extencion</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @company.each do |companies| %>
          <tr>
            <td><%= companies.company_name %></td>
            <td><%= companies.company_rfc %></td>
            <td><%= companies.company_address %></td>
            <td><%= companies.company_ext_num %></td>
            <td><%= companies.company_int_num %></td>
            <td><%= companies.company_neighborhood %></td>
            <td><%= companies.company_city %></td>
            <td><%= companies.company_zip %></td>
            <td><%= companies.company_telephone %></td>
            <td><%= companies.company_extension %></td>
            <td><%= link_to 'Ver', companies, :class => 'green' %></td>
            <td><%= link_to 'Eliminar', companies,:class => 'red', method: :delete, data: { confirm: 'Esta seguro que desea eliminar el Prestamo?' } %></td>            
          </tr>
      <% end %>
      </tbody>
    </table>

        </div>
      </div>
    </div>
  </div>
</div>
